<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <style>
        .header {
            background-color: #333;
            padding: 10px;
            margin-top: 0;
        }

            .header a {
                color: white;
                text-decoration: none;
                margin-right: 20px;
            }

                .header a:hover {
                    color: yellow;
                }
    </style>
</head>
<body>
    <div class="header">
        <a href="@Url.Action("VelkomstForside", "Velkomst")">Velkomst Forside</a>
        <a href="@Url.Action("BilForside", "Bil")">Bil Forside</a>
        <a href="@Url.Action("BrugerForside", "Bruger")">Bruger Forside</a>
    </div>

    <div class="container">
        @RenderBody()
    </div>

    <footer>
        <p>&copy; @DateTime.Now.Year - Bilforhandleren</p>
    </footer>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>