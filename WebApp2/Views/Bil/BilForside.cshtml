@model DBLogik.Model.BrugerBilViewModel


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>BilForside</title>
</head>
<body>
    <br />
    <div>
        @using (Html.BeginForm("FindBilNavn", "Bil", FormMethod.Post))
            {
                @Html.TextBox("navn")
                <input type="submit" value="Find Biler"/>
            }
    </div>
    <div>
        @if (Model.Biler != null)
        {

        foreach (var b in Model.Biler)
        {
            <h1>@b.Navn</h1>
            <p>Mærke: @b.Mærke</p>
            <p>Model: @b.Model</p>
            <p>År: @b.År</p>
            <p>Indkøbspris: @b.IndKPris</p>
            <p>Salgspris: @b.SalgsPris</p>
            <hr />
        }
        }
        else
            {
                <p>Ingen biler blev fundet</p>
            }
    </div>
</body>
</html>
